/* Create table about the people and what they do here */
CREATE TABLE actors (id INTEGER PRIMARY KEY,
    full_name TEXT,
    famous_roles TEXT,
    costar_id1 INTEGER,
    costar_id2 INTEGER,
    costar_id3 INTEGER,
    costar_id4 INTEGER,
    costar_id5 INTEGER);

